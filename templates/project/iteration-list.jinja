{% extends 'project/project.jinja' %}

{% from "_helpers.jinja" import render_pagination %}

{% block breadcrumb %}
{{ super() }}
<li class="divider">/</li>
<li><a href="{{ url_for('project.work.render_iteration_list', project_id=project.id) }}">Iterations</a></li>
{% endblock %}

{% block main %}

<div class="span12">

  <!-- Modal for new iteration -->
  <div class="modal fade" id="new-iteration">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3>{{ _('Create New Iteration') }}</h3>
    </div>
    <div class="modal-body">
      <form class="form-vertical well" id="new-iteration-form" method="POST" 
          action="{{ url_for('project.iteration.create_iteration', project_id=project.id) }}">
        <label for="name">Name:</label>
        <input class="span12" type="text" placeholder="Iteration Name"
          name="name" required="required" id="name"/>
        <div class="form-actions">
          <button type="submit" class="btn btn-info pull-right span6 offset3" 
            id="create_new_project" data-loading-text="Creating New Project">
            <i class="icon-plus icon-white"></i> {{ _('Save') }}
          </button>
        </div>
      </form>
    </div>
  </div>

  <a class="btn" data-toggle="modal" href="#new-iteration"><i class="icon-plus"></i> New Iteration</a>
  <div id="myTabContent" class="tab-content">
    <div class="row-fluid">
     {% if iterations.pages > 1 %}
      <div class="span5">
        {{ render_pagination(iterationss, None, 'project.work.render_iteration_list', project_id=project.id) }}
      </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
